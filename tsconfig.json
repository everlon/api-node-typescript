{
  "compilerOptions": {
    "target": "es2016",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./jest.config.ts", "./node_modules", "./tests", "./build"]
}
